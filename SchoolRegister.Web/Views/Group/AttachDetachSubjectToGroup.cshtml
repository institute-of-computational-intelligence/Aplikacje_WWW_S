@using SchoolRegister.ViewModels.VM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model AttachDetachSubjectGroupVm
@{
    ViewData["Title"] = $"{ViewBag.ActionType}";
}
<h2>@ViewData["Title"] @Localizer["Subject Group"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewBag.PostAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Localizer["Subject"]</label>
                <select asp-for="SubjectId" class="form-control" asp-items="@ViewBag.SubjectList"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["Group"]</label>
                <select asp-for="GroupId" class="form-control" asp-items="@ViewBag.GroupList"></select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.ActionType" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Subject">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
