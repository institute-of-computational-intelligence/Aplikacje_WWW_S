@using Microsoft.AspNetCore.Mvc.Localization
@using SchoolRegister.ViewModels.VM
@model IEnumerable<StudentVm>
@inject IViewLocalizer Localizer

@foreach (var item in Model)
        {
            <tr>
                <td class="d-none">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td class="align-middle text-right">
                    <div class="dropdown show">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Manage
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="dropdown-item modalLink" href="#">
                                    Delete
                                </a>
                                <div class="dropdown-divider"></div>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Teacher") || User.IsInRole("Parent"))
                            {

                                <a class="dropdown-item" asp-action="Details" asp-route-studentId="@item.Id">
                                    Details
                                </a>
                                @if (!User.IsInRole("Parent"))
                                {
                                    @if (User.IsInRole("Teacher"))
                                    {
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-controller="Grade" asp-action="AddGradeToStudent"
                            asp-route-studentId="@item.Id">
                                            Add Grade
                                        </a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Group" asp-action="AttachStudentToGroup"
                            asp-route-studentId="@item.Id">
                                        Attach to group
                                    </a>
                                    @if (item.GroupId != null)
                                    {
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-controller="Group" asp-action="DetachStudentFromGroup"
                            asp-route-studentId="@item.Id">
                                            Detach from group
                                        </a>
                                    }

                                }
                            }
                        </div>
                    </div>
                </td>
            </tr>
        }