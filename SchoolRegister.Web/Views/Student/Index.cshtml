@model IEnumerable<SchoolRegister.ViewModels.VM.StudentVm>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Students"];
}

<h2>@ViewData["Title"]</h2>
<div class="row">
        <div class ="col-4">
            <div class ="form-group">
                <input class = "students-filter-input form-control" type="text" placeholder="filter"/>
            </div>
        </div>
</div>
<table id="tabela" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class ="students-table-data">
        <partial name="_StudentsTableDataPartial" model="Model"/>
    </tbody>
</table>

<div class="modal fade" id="Modalpopup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">

    </div>
</div>

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $(".modalLink").click(function () {
            var $currentId = $(this).closest("tr").children('td:first').text();
            console.log($currentId)
            $.ajax({
                url: "@Url.Action("GetIdToDelete", "Student")",
                data: {
                    studentId: $currentId
                },
                success: function (data) {
                    $(".modal-dialog").html(data);
                    $("#Modalpopup").modal('show');
                }
            });
        })
    })
</script>
}