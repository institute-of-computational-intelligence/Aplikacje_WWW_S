@model SchoolRegister.ViewModels.VM.StudentVm
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AddToGroup"];
}

<h1>@Localizer["AddToGroup"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">@Localizer["FirstName"]</label>
                <input asp-for="FirstName" class="form-control" readonly />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">@Localizer["LastName"]</label>
                <input asp-for="LastName" class="form-control" readonly />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="ParentName" class="control-label">@Localizer["ParentName"]</label>
                <input asp-for="ParentName" class="form-control" />
                <span asp-validation-for="ParentName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="ParentId" class="control-label">@Localizer["ParentID"]</label>
                <input asp-for="ParentId" class="form-control" />
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label">@Localizer["GroupName"]</label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="AverageGrade" class="control-label">@Localizer["AverageGrade"]</label>
                <input asp-for="AverageGrade" class="form-control" />
                <span asp-validation-for="AverageGrade" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="UserName" class="control-label">@Localizer["UserName"]</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.ActionType" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
