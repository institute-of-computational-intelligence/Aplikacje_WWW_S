@model IEnumerable<SchoolRegister.ViewModels.VM.DisplayGradeVm>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ShowGrades"];
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.StudentId)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.StudentName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.SubjectName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.GradeValue)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.TeacherName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.DateOfIssue)]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfIssue)
                </td>

            </tr>
        }
    </tbody>
</table>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
