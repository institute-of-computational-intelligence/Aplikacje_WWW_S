@using SchoolRegister.Model.DataModels
@model IDictionary<string, List<GradeScale>>
<table class="table">
    <thead>
        <tr>
            <th>
                Subject Name
            </th>
            <th>
                Grades
            </th>
            <th>
                Average Grade
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @string.Join(", ", item.Value.Select( g=> ((int)g).ToString()))
                </td>
        }
    
