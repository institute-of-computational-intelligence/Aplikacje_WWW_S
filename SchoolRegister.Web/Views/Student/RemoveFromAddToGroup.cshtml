@model SchoolRegister.ViewModels.VM.StudentVm
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    @if (ViewBag.ActionType == "Remove" || ViewBag.ActionType == "Usuń")
    {
        ViewData["Title"] = $"{ViewBag.ActionType}";
    }

    @if (ViewBag.ActionType == "Add" || ViewBag.ActionType == "Dodaj")
    {
        ViewData["Title"] = $"{ViewBag.ActionType}";
    }
}

@if (ViewBag.ActionType == "Remove" || ViewBag.ActionType == "Usuń")
{
    <h2>@ViewData["Title"] @Localizer["FromGroup"]</h2>
}

@if (ViewBag.ActionType == "Add" || ViewBag.ActionType == "Dodaj")
{
    <h2>@ViewData["Title"] @Localizer["ToGroup"]</h2>
}

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RemoveFromAddToGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.ActionType == "Remove" || ViewBag.ActionType == "Usuń")
            {
                <div class="form-group">
                    <label asp-for="Id" class="control-label">@Localizer["ID"]</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupName" class="control-label">@Localizer["Group"]</label>
                    <input asp-for="GroupName" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>
            }

            @if (ViewBag.ActionType == "Add" || ViewBag.ActionType == "Dodaj")
            {
                <div class="form-group">
                    <label asp-for="Id" class="control-label">@Localizer["ID"]</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupName" class="control-label">@Localizer["Group"]</label>
                    <input asp-for="GroupName" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>

            }
            <div class="form-group">
                <input type="submit" value="@ViewBag.ActionType" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
