@model IEnumerable<SchoolRegister.ViewModels.VM.SubjectVm>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Index";
}

<h1>@Localizer["Subject"]</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="AddOrEditSubject">@Localizer["CreateNew"]</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Name)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Description)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.TeacherName)]
            </th>
            <th>
                @Localizer["GroupCount"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Groups.Count)
                </td>

                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="AddOrEditSubject" asp-route-id="@item.Id">@Localizer["Edit"]</a> @:|
                        <a asp-controller="Group" asp-action="AttachSubjectToGroup"
                    asp-routesubjectId="@item.Id">@Localizer["AttachToGroup"]</a> @:|
                        <a asp-controller="Group" asp-action="DetachSubjectToGroup"
                    asp-routesubjectId="@item.Id">@Localizer["DetachFromGroup"]</a> @:|
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
