@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<SchoolRegister.ViewModels.VM.SubjectVm>

@{
    ViewData["Title"] = "Index";
}

<h2>@Localizer["Subject"]</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="AddOrEditSubject">@Localizer["CreateNew"]</a>
    </p>
}

<div class="row">
    <div class="col-4">
        <div class="form-group">
            <input class="subjects-filter-input form-control" type="text" placeholder="filter" />
        </div>
    </div>
</div>

<table id="tabela" class="table table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-5">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th class="col-2">
                @Localizer["GroupCount"]
            </th>
        </tr>
    </thead>
    <tbody>
        <partial name="_SubjectsTableDataPartial" model="Model" />
    </tbody>
</table>
<div class="modal fade" id="Modalpopup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">

    </div>
</div>

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $(".modalLink").click(function () {
            var $currentId = $(this).closest("tr").children('td:first').text();
            console.log($currentId)
            $.ajax({
                url: "@Url.Action("GetIdToDelete", "Subject")",
                data: {
                    subjectId: $currentId
                },
                success: function (data) {
                    $(".modal-dialog").html(data);
                    $("#Modalpopup").modal('show');
                }
            });
        })
    })
</script>
}