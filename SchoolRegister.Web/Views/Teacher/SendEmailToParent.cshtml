@using SchoolRegister.ViewModels.VM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SendEmailVm
@{
    ViewData["Title"] = @Localizer["SendEmailToP"];
}                      

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendEmailToParent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="StudentId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">@Localizer["EmailTitle"]</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">@Localizer["EmailContent"]</label>
                <textarea asp-for="Content" class="form-control" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["EmailSend"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
                
<div>
    <a asp-action="Index" asp-controller="Student">@Localizer["BacktoList"]</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}         