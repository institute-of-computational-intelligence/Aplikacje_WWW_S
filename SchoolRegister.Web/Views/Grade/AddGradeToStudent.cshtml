@model SchoolRegister.ViewModels.VM.AddGradeAsyncVm

@{
    ViewData["Title"] = $"Add grade to {ViewBag.Student}";
}

<h2>@ViewData["title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGradeToStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="TeacherId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="StudentId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="SubjectId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label class="control-label">Subject</label>
                <select name="subj" class="form-control" asp-items="@ViewBag.SubjectsSelectList">
                    <option selected>Choose subject</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GradeValue" class="control-label"></label>
                <select asp-for="GradeValue" class="form-control" asp-items="@ViewBag.GradeSelectList"></select>
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
