@using SchoolRegister.ViewModels.VM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<GradeVm>

@{
    ViewData["Title"] = $"{Model.ElementAt(0).Student}";
}

                              
<h2>@Localizer["GradesReportTitle"] @ViewData["Title"]</h2>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfIssue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfIssue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeValue)
            </td>
        </tr>
}         
    </tbody>
</table>
         
<a class="btn btn-secondary" role="button" asp-action="GradesReport">@Localizer["Back"]</a>